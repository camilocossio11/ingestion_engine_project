{
    "storage_account_name": "dlsmde01ccossi01v2",
    "lakehouse_container_name": "datalake",
    "datasource": "applications",
    "dataset": "client_data",
    "kafka_config_path": "./config/confluent_kafka/client_properties",
    "source": {
        "format" : "kafka",
        "options" : {
            "subscribe" : "topic_client_data",
            "startingOffsets" : "earliest"
        },
        "key_format": "string",
        "value_format": "json",
        "json_schema": "timestamp timestamp, full_name string, email string, age int, clicked_ads int, wishlist_items array<string>, engagement_score double"
    },
    "sink": {
        "format": "delta",
        "options": {
            "mergeSchema": "true"
        }
    }
}